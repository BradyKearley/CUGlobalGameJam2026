script/source = "extends Control

@onready var label = $Label

func _ready():
	# Start the text below the screen
	label.position.y = get_viewport_rect().size.y
	
	# Create tween for scrolling animation
	var tween = create_tween()
	tween.tween_property(label, \"position:y\", -label.size.y -200, 42.0)
	tween.tween_callback(_on_animation_complete)

func _on_animation_complete():
	# Change to main game scene after animation
	get_tree().change_scene_to_file(\"res://main_game.tscn\")

func _input(event):
	# Skip intro on any key press or mouse click
	if event is InputEventKey and event.pressed:
		get_tree().change_scene_to_file(\"res://main_game.tscn\")
	elif event is InputEventMouseButton and event.pressed:
		get_tree().change_scene_to_file(\"res://main_game.tscn\")
"

